<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExifActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarExif"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_variant"
        app:title="Exif Data"
        app:titleTextColor="@color/white" />


    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/toolBarExif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgThumbnail"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/liner_bg"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/txtFileLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtFNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtFocalLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtExposure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtIso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>